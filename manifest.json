{
  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons": {
    "48": "dist/logo.svg"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["./dist/main.js"]
    }
  ],
  "permissions": [
    "*://*/*"
  ]
}
